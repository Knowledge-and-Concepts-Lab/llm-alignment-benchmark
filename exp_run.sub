container_image = docker://studdiford/alignment-benchmark:v2

universe = container

executable = experiment.sh

log = log_$(Cluster).log
output = output_$(Cluster)_$(Process).out
error = error_$(Cluster)_$(Process).err

+is_resumable = false
should_transfer_files = YES
transfer_input_files = experiment.sh, llm-alignment-benchmark.tar
when_to_transfer_output = ON_EXIT_OR_EVICT


request_gpus = 1
request_cpus = 1
request_memory =100GB
request_disk = 200GB    

+WantGPULab = true
+GPUJobLength = "short"
gpus_minimum_memory = 60000MB

Requirements = (Target.HasCHTCStaging == true)
queue 1